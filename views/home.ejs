<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
</head>
<body>
    <%- include('component/header.ejs'); %>    
    <main class="row ">      
      <% news_data.forEach((data) => { %>
        <div class="col-3 border m-auto text-center my-2 py-2">          
            <img src="<%= data.news_banner %>" alt="News Banner" height="150px"/>
            <br>
            <h2><%= data.title  %></h2>
            <p><%= data.description.substring(0, 160); %>
              <form action="/single_page" method="post">
                <input type="hidden" value="<%= data.id  %>" name="news_id">
                <button class="btn btn-success">Read More</button>
              </form>
            </p>
        </div>
        <% }); %>
    </main>
    <%- include('component/footer.ejs'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>