<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>read_user</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
</head>

<body>
    <%- include('component/header.ejs'); %> 
      <main>
          <h1 class="text-end px-5"><a href="add_new_user" class="btn btn-success text-decoration-none">Add New User</a></h1>
          <table class="border border-2 py-5 table table-hover">
          <% contactdata.forEach((data) => { %>
            <tr>              
              <th><%= data.full_name  %></th>              
              <th><%= data.email  %></th>
              <th><%= data.comment  %></th>
              <th><a href="/edit_user/<%= data.id  %>" class="btn btn-success">Reply</a></th>
              <th><a href="/delete_user/<%= data.id  %>" class="btn btn-danger">Declined</a></th>
            </tr>
          <% }); %>
        </table>
      </main>
    <%- include('component/footer.ejs'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>